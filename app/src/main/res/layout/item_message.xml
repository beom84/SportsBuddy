<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:layout_marginBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_rect15_grey_item">

    <LinearLayout
        android:id="@+id/ll_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="1dp"
            android:scaleType="centerCrop"
            android:background="@drawable/shape_circle_outline"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한아름 볼링 칠 사람"
        app:layout_constraintStart_toEndOf="@id/ll_thumbnail"
        app:layout_constraintTop_toTopOf="@id/ll_thumbnail"
        android:layout_marginStart="11.33dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3분 전"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:textColor="@color/grey_content"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="야호야호야호야호야호야호야호야호야호야호야호야호야호야호"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/grey_content"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[최민규카츠]"
        app:layout_constraintStart_toStartOf="@id/ll_thumbnail"
        app:layout_constraintEnd_toEndOf="@id/ll_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/ll_thumbnail"
        android:textStyle="bold"
        android:textColor="@color/grey_content"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/tv_user_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22 / 남자"
        app:layout_constraintTop_toTopOf="@id/tv_user_name"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        android:textStyle="bold"
        android:textColor="@color/grey_content"
        android:textSize="14sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>